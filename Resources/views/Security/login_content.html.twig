{% trans_default_domain 'FOSUserBundle' %}

<form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	
	<div class="form-group">
    	<label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
    	<div>
    		<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    	</div>
	</div>
	
    <div class="form-group">
    	<label class="control-label" for="password">{{ 'security.login.password'|trans }}</label>
    	<div>
    		<input class="form-control" type="password" id="password" name="_password" required="required" />
    	</div>
	</div>
    
    <div class="form-group">
	    <div class="checkbox col-sm-offset-2">
	    	<input type="checkbox" id="remember_me" name="_remember_me" checked />
		    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
	    </div>
    </div>
    
  	<div class="form-group">
    	<div class="col-sm-10">
    		<input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    		<a href="{{ path('fos_user_resetting_request') }}">
				<div class="btn btn-warning">
					{{ 'security.login.forgot'|trans({}, 'messages') }}
				</div>
			</a>
			<a href="{{ path('fos_user_registration_register') }}">
				<div class="btn btn-success">
					{{ 'layout.register'|trans }}
				</div>
			</a>
    	</div>
    </div>
    
    {% if path(app.request.get('_route')) != app.request.headers.get('referer') %}   
    	<input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}" />
	{% else %}   
		<input type="hidden" name="_target_path" value="{{ path('jt_homepage') }}" />
	{% endif %}
</form>

